<%- include('partials/auth-header') %>
<div class="container register">
    <center><font color="white"><h1>Campus Cloud</h1></font></center>
    <br><br>
    <div class="row">
        <div class="col-md-3 register-left">
            <img src="https://image.ibb.co/n7oTvU/logo_white.png" alt=""/>
            <h3>Welcome</h3>
            <p>You are one step away from your seniors ! Everything at one place. Here we go !!!</p>
            <form action="\signup" method="get">
                <input type="submit" class="btnRegister"  value="Register" style="width: 100px; height: 40px; margin: 5%;" />
            </form>
        </div>
        <div class="col-md-9 register-right ">
 
            <div class="tab-content" id="myTabContent">
                <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                    <h3 class="register-heading">Login</h3>
                    <form action="/auth" method="post">
                    <div class=" row register-form" >
                                <div class=" col-md-6 m-auto">
                                <div class="form-group  col-md-12 " >

                                    <input type="text" class="form-control" placeholder=" USN " value=""  style="width: 300px;" name ="username" id="usn"  required/>
                                </div>
                                <div class="form-group  col-md-12">
                                    <input type="password" class="form-control" placeholder="Password" value="" style="width: 300px;" name="password" id="password" required/> <br>
                                    <center><a href="/reset-pass" class="text-center mb-3">Forgot password ?</a></center>
                                    <% if(error_msg != ''){ %>
                                       <br>
                                        <div class=" text-center alert alert-warning alert-dismissible fade show"  style="width: 300px;"  role="alert">
                                             <%= error_msg %>
                                            <button type="button" class="close" data-dismiss="alert"aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>
                                        <% } %> 
                                        <% if(success_msg != ''){ %>
                                            <br>
                                             <div class=" text-center alert alert-success alert-dismissible fade show"  style="width: 300px;"  role="alert">
                                                  <%= success_msg %>
                                                 <button type="button" class="close" data-dismiss="alert"aria-label="Close">
                                                     <span aria-hidden="true">&times;</span>
                                                 </button>
                                             </div>
                                             <% } %> 
                                    <center><input type="submit" class="btnRegister"  value="Login" style="width: 100px; height: 40px ;" /></center>
                                </div>
                    </div>                              
                        </div>
                    </form>
                </div>
                <div class="tab-pane fade show" id="profile" role="tabpanel" aria-labelledby="profile-tab">

                </div>
            </div>
        </div>
    </div>

</div>
<%- include('partials/auth-footer') %>
